jobs:
  - job: my_job
    steps:
      - name: Check Python Installation
        run: |
          if ! command -v python3 &> /dev/null; then
            echo "Python 3 not found. Installing Python 3."
            sudo apt-get update
            sudo apt-get install -y python3 
          else
            echo "Python 3 is already installed."
          fi
      - uses: ./.github/workflows/reusable_test1.yml@v1  # Call the reusable workflow
        with:
          args: 'some arguments'
          post: |
            echo "This is the after_script block (from main workflow)"
            # Add your after_script commands here (e.g., cleanup, notifications)
      - run: echo "This is the main job step"

